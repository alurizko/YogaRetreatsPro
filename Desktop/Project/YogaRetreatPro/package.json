{
  "name": "yoga-retreat-pro",
  "version": "1.0.0",
  "description": "Yoga Retreat Pro - Full Stack Application",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "concurrently --kill-others-on-fail --raw \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cross-env NODE_ENV=development tsx watch server/index.ts",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && npm run build",
    "build:server": "tsc server/index.ts --outDir dist",
    "start": "npm run start:server",
    "start:server": "cross-env NODE_ENV=production node dist/index.js",
    "db:push": "cd server && npm run db:push",
    "db:migrate": "cd server && npm run db:migrate",
    "clean": "rimraf dist",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "npm run build:client && npm run build:server && npm run start:server"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "rimraf": "^5.0.5",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0"
  },
  "keywords": [
    "yoga",
    "retreat",
    "api",
    "express",
    "typescript",
    "react",
    "vite"
  ],
  "author": "YogaRetreatPro Team",
  "license": "MIT"
}